doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(href='https://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Open+Sans+Condensed:300&subset=latin-ext', rel='stylesheet')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='styles.css')
  body

    .flex-container#order-main
      form.flex-container#addressForm
        .infoitem
          span.material-icons person
          input.name(type="text" placeholder="Name" required) 
        .infoitem
          span.material-icons place
          input.name(type="text" placeholder="Place" required) 
        .infoitem
          span.material-icons phone
          input.name(type="text" placeholder="Phone" required) 
        .infoitem
          span.material-icons create
          input.name(type="text" placeholder="Note") 


      form.flex-container#paymentType
        p Payment type

        input(type='radio' name='payment' value='false' id='cash' checked)
        label.radio(for='cash') Cash

        input(type='radio' name='payment' value='true' id='card')
        label.radio(for='card') Card
            

  .btn-container
    button#order-back(href='menu')
      span.material-icons arrow_back 
    button#order-submit(form='addressForm', type='submit')
      span.material-icons check

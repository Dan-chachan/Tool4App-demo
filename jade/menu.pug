  body

    button.mo-button.btn(data-toggle="collapse", data-target="#mo-food" type="button")
      | Monday

    .container-fluid.collapse.show#mo-food

      - 
        var foods = [
          ["Tikka", 200, "gud fud"], [], []
        ]

      each food in foods

        .row
          .container-fluid.foodTile
            .row
              .col-2.butt-container.btn-group-vertical
                button.btn.add-food
                  i.material-icons  add

                .amountBox 0

                button.btn.remove-food
                  i.material-icons  remove 
              .col-7.food-info
                p.foodname= food[0] 
                p.foodprice= food[1] + " Kƒç"
                p.fooddesc= food[2] 
              .col-3.img-container
                img(src='img/food/tomato.jpg')

  script(src='script.js')